                    type : 'post',
                    url : "{:U('Course/course_sub')}",
                    data : dj,
                    success : function(data){
                        if(data['status'] == '1'){
                            $("#conform-alert").modal();
                            $("#conform_conts").text(data['mes']);
                           /* $('#qianw').attr('href','{:U("Mine/my_intention",["child"=>session(yx_stu)])}');*/
                        }else{
                            alert(data['mes']);
                        }
                    }
                })
                return false;
            }

        })
    </script>
