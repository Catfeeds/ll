<script src="__TMPL__Public/js/weixin/amazeui.min.js"></script>
<script>
    $('select').css('color','#999');
    $('option').css('color','#323232');
    $('select').change(function(){
        var $selltem = $(this).val();
        if($selltem == $(this).find('option:first').val()){
            $(this).css('color','#999');
        }else{
            $(this).css('color','#323232');
        }
    });
    var index = 0 ;
    $('#sub').click(function(){
        if(index!=0){
            alert('请勿重复提交');
        }else{
            var sel = $('#sel').val();
            var stu_i = $('#stu_i').val();
            if(sel == 0){
                $("#my-alert").modal();
                $("#alert_cont").text("请选择小孩");
                return;
            }else if(stu_i == ''){
                $("#my-alert").modal();
                $(".am-modal-footer").addClass('dbtn');
                $("#alert_cont").text("请填写意向");
                return;
            }else{
                var url = "{:U('Course/stu_intention')}";
                $.ajax({
                    url : url,
                    type : 'POST',
                    data : {'child': sel,'stu_i' : stu_i},
                    success : function (data){
                        window.location.href= "{:U('Course/course')}";
                    },
                    error : function(e){
                        $("#my-alert").modal();
                        $("#alert_cont").text("服务器忙请稍后再试");
                        return;
                    }
                })
                index ++;
            }
        }
    })
</script>
</body>
