<admintpl file="header" />
</head>
<link rel="stylesheet" type="text/css" href="__PUBLIC__/css/addcourse.css" />
<body>
	<div class="wrap">
		<ul class="nav nav-tabs">
			<li class="active"><a href="{:U('Subject/subjectlist')}">科目列表</a></li>
			<li><a href="{:U('Subject/addsubject')}">新增科目</a></li>
			<li class="active"><a href="{:U('Subject/editsubject')}">编辑科目</a></li>
		</ul>
		<form method="post" class="form-horizontal js-ajax-form" action="{:U('Subject/edit_post')}">。
			<input type="hidden" name="id" value="{$id}">
			<fieldset>
				<div class="control-group">
					<label class="control-label">科目</label>
					<div class="controls">
						<input type="text" name="title" value="{$title}" required>
					</div>
				</div>
			</fieldset>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary js-ajax-submit">{:L('SAVE')}</button>
				<a class="btn" href="javascript:history.back(-1);">{:L('BACK')}</a>
			</div>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
</body>

</html>