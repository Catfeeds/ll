<!doctype html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>绑定手机号</title>
    <link rel="stylesheet" href="../Public/css/weixin/amazeui.min.css">
    <link rel="stylesheet" href="../Public/css/weixin/bdTel.css">
    <!--<link rel="stylesheet" href="assets/css/app.css">-->
</head>
<body>
<!--表单-->
<section>
    <form class="am-form am-form-horizontal">
        <div class="am-form-group">
            <div class="am-u-sm-13">
                <label id="te">手机号</label>
                <input type="number" id="doc-ipt-3" class="am-radius" style="text-align: center">
                <input type="button" value="发送验证码" class="btn1 getcode"><!-- <button class="btn1">发送验证码</button> -->
            </div>
        </div>

        <div class="am-form-group" style="margin-top: -16px;">
            <div class="am-u-sm-13">
                <label id="yz">验证码</label>
                <input type="password" id="doc-ipt-pwd-2" class="am-radius" placeholder="输入验证码">
            </div>
        </div>

        <div class="am-form-group">
            <div class="am-u-sm-13">
                <label id="tj">推荐人</label>
                <input type="text" id="doc-ipt-pwd-3" class="am-radius" placeholder="请填写推荐人手机号码（选填）">
            </div>
        </div>

        <div class="am-form-group">
            <div class="am-u-sm-13">
                <p style="color: #a5a8a0;font-size: 12px;letter-spacing: 1.5px">绑定即表明您同意<a style="color: #0190ff;border-bottom: 1px solid #0190ff;">用户协定</a></p>
            </div>
        </div>

        <div class="am-form-group">
            <div class="am-u-sm-13">
            <input type="button" id="regist_go" value="绑定" class="am-btn am-btn-block" style="text-align:center;background: #2adcaa;color: white;height: 50px;margin-top: -27px;border-radius:3px">
            </div>
        </div>

    </form>
</section>
<tc_include file="Public:weixin_foot"/>
<!--[if (gte IE 9)|!(IE)]><!-->
<script src="../Public/js/weixin/jquery.min.js"></script>
<!--<![endif]-->
<!--[if lte IE 8 ]>
<!--<script src="http://libs.baidu.com/jquery/1.11.1/jquery.min.js"></script>-->
<![endif]-->
<script src="../Public/js/weixin/amazeui.min.js"></script>
<script>
$("#regist_go").click(function(){
	var phone=$("#doc-ipt-3").val();
	var code=$("#doc-ipt-pwd-2").val();
	var recommend=$("#doc-ipt-pwd-3").val();
	if(phone==""){
		$("#my-alert").modal();
 		$("#alert_cont").text("请输入手机号!");
 		return;
	}
	if(code==""){
		$("#my-alert").modal();
 		$("#alert_cont").text("请输入验证码!");
 		return;
	}
	$.post('{:U("Center/bang_go")}',
			{ phone : phone , code : code , recommend : recommend},
		 	function(data){
				if(data[0]=="101"){
					$("#my-alert").modal();
			 		$("#alert_cont").text(data[1]);
			 		return;
				}else{
					$("#my-alert").modal();
			 		$("#alert_cont").text(data[1]);
			 		return;
				}
	});
})
$(".getcode").click(function(){
	var phone=$("#doc-ipt-3").val();
	var re = /^1\d{10}$/;
    if (re.test(phone)) {
    } else {
   	 $("#my-alert").modal();
		 $("#alert_cont").text("请输入正确手机号!");
		 return;
    }
	$.post('{:U("Center/send_note")}',
			{ phone : phone},
		 	function(data){
				if(data[0]=="101"){
					$("#my-alert").modal();
			 		$("#alert_cont").text("验证码发送成功!");
			 		return;
				}else{
					$("#my-alert").modal();
			 		$("#alert_cont").text(data[1]);
			 		return;
				}
	});
})
</script>
</body>
</html>