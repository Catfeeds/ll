   //判断积分
    function isjifen(){
        if (IS_POST){
            $jf = I('post.jf');
            $user_id = session('weixin_user_id');
            $rest = M('user')->where(['id'=>$user_id])->find();
            if((int)$jf <= (int)$rest['integral']){
                $zjife =  (int)$rest['integral'] - (int)$jf;
                $restx = M('user')->where(['Phone'=>$user_id])->save(['integral'=>$zjife]);
                $data = [
                    'user_id'=>$rest['id'],
                    'obtain_type'=>'4',
                    'is_obtain'=>'0',
                    'integral'=>'-'.$jf,
                    'content'=>'支付课程费'.$jf,
                    'createtime'=>date('Y-m-d H:i:s',time())
                ];
                M('integral')->where(['user_id'=>$rest['id']])->add($data);
                $code = ['status'=>0,'mes'=>'支付完成'];
                $this->ajaxReturn($code);
            }else{
                $code = ['status'=>1,'mes'=>'积分不足'];
                $this->ajaxReturn($code);
            }
        }
    }
