<script src="__TMPL__Public/js/weixin/amazeui.min.js"></script>
<script>
$(".getcode").click(function(){
	var phone=$("#doc-ipt-3").val();
	$.post('{:U("Center/send_note")}',
			{ phone : phone},
		 	function(data){
				console.log(data);
	});
})
</script>
</body>
</html>