<admintpl file="header" />
</head>
<link rel="stylesheet" type="text/css" href="__PUBLIC__/css/addcourse.css" />
<body>
	<div class="wrap">
		<ul class="nav nav-tabs">
			<li><a href="{:U('Grade/gradelist')}">学段列表</a></li>
			<li><a href="{:U('Grade/addgrade')}">新增学段</a></li>
			<li class="active"><a href="{:U('Grade/editgrade',array('edit_id'=>$id))}">编辑学段</a></li>
		</ul>
		<form method="post" class="form-horizontal js-ajax-form" action="{:U('Grade/edit_post')}">
			<input type="hidden" name="id" value="{$id}">
			<fieldset>
				<div class="control-group">
					<label class="control-label">学段名称</label>
					<div class="controls">
						<input type="text" name="title" value="{$title}" required>
					</div>
				</div>
			</fieldset>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary js-ajax-submit
">{:L('SAVE')}</button>
				<a class="btn" href="javascript:history.back(-1);">{:L('BACK')}</a>
			</div>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
</body>

</html>