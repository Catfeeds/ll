<admintpl file="header" />
</head>
<link rel="stylesheet" type="text/css" href="__PUBLIC__/css/addcourse.css" />
<body>
	<div class="wrap">
		<ul class="nav nav-tabs">
			<li><a href="{:U('scorecharge/scorechargelist')}">{:L('ADMIN_H5_INDEX')}</a></li>
			<li class="active"><a href="{:U('scorecharge/addscore')}">{:L('ADMIN_H5_ADD')}</a></li>
		</ul>
		<form method="post" class="form-horizontal js-ajax-form" action="{:U('scorecharge/add_post')}">
			<fieldset>
				<div class="control-group">
					<label class="control-label">{:L('TITLE')}</label>
					<div class="controls">
						<input type="text" name="title">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">{:L('SCORE')}</label>
					<div class="controls">
						<input type="number" name="score">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">{:L('PRICE')}</label>
					<div class="controls">
						<input type="number" name="price">
					</div>
				</div>
				<div class="control-group">
					<label class="control-label">排序编号</label>
					<div class="controls">
						<input type="number" name="sort" value="{$sort}" required>
					</div>
				</div>
				<span style="margin-left: 200px;">注:排序编号越大越靠后，不填默认99</span>
			</fieldset>
			<div class="form-actions">
				<button type="submit" class="btn btn-primary js-ajax-submit">{:L('ADD')}</button>
				<a class="btn" href="{:U('classification/teacherlist')}">{:L('BACK')}</a>
			</div>
		</form>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
	<script type="text/javascript" src="__PUBLIC__/js/ueditor/ueditor.config.js"></script>
	<script type="text/javascript" src="__PUBLIC__/js/ueditor/ueditor.all.min.js"></script>
</body>
</html>