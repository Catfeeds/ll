<admintpl file="header" />
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li class="active"><a href="{:U('classification/childlist')}">小孩列表</a></li>
			<li><a href="{:U('classification/addchild')}">新增孩子</a></li>
		</ul>
		<form class="well form-search" method="get" action="{:U('classification/childlist')}" id="form_submit">
		    <div class="search_type cc mb10">
		      <div class="mb10"> 
		        <span class="mr20">
		        <input type="hidden" name="g" value="Users">
		        <input type="hidden" name="m" value="Scorecord">
		        <input type="hidden" name="a" value="index">
		     
		        
			        <div class="row" style="margin-top: 20px;">
				        <div class="span1">
				        	小孩真名:
				        </div>
				        <div class="span2">
				        	<input type="text" name="name" style="width: 100px;" value="{$name}" placeholder="小孩真名"/>
				        </div>
				        <div class="span1">
				        	小孩昵称:
				        </div>
				        <div class="span2">
				        	<input type="text" name="nickname" style="width: 100px;" value="{$nickname}" placeholder="小孩昵称"/>
				        </div>
				        <div class="span1">
							性别:
						</div>
						<div class="span2">
							<select name="gender" style="width: 100px;">
								<option value="">请选择</option>
								<option value="3" <if condition="3 eq $gender">selected</if>>未知</option>
								<option value="1" <if condition="1 eq $gender">selected</if>>男</option>
								<option value="2" <if condition="2 eq $gender">selected</if>>女</option>
							</select>
						</div>
					</div>
				</span>
			   </div>
			   <div class="mb10"> 
		        <span class="mr20">
		        	<div class="row" style="margin-top: 20px;">
				        <div class="span1">
				        	学校:
				        </div>
				        <div class="span2">
				        	<input type="text" name="school" style="width: 100px;" value="{$school}" placeholder="学校"/>
				        </div>
		        		<div class="span1">
							年纪
						</div>
						<div class="span2">
							<input type="number" name="grade" style="width: 100px;" value="{$grade}" placeholder="年纪">
						</div>
						<div class="span1">
		        			是否是会员:
		        		</div>
		        		<div class="span2">
		        			<select name="is_vip" style="width: 100px;">
	        					<option value="" >请选择</option>
		        				<option value="2" <if condition="2 eq $is_vip">selected</if>>否</option>
		        				<option value="1" <if condition="1 eq $is_vip">selected</if>>是</option>
		        			</select>
		        		</div>
					</div>
				</span>
			   </div>
			   <div class="mb10"> 
		        <span class="mr20">
		        	<div class="row" style="margin-top: 20px;">
				        <div class="span2">
				        	生日起始：
				        </div>
				        <div class="span3">
				        	<input type="text" name="startbirthday" readonly class="input length_2 J_date" value="{$startbirthday}" autocomplete="off" placeholder="请选择时间..." onClick="WdatePicker()" onfocus="WdatePicker({skin:'whyGreen',dateFmt:'yyyy-MM-dd HH:mm:ss'})">
				        </div>
						<div class="span2">
							生日结束：
						</div>	
						<div class="span3">
							<input type="text" name="endbirthday" readonly class="input length_2 J_date" value="{$endbirthday}" autocomplete="off" placeholder="请选择时间..." onClick="WdatePicker()" onfocus="WdatePicker({skin:'whyGreen',dateFmt:'yyyy-MM-dd HH:mm:ss'})">
						</div>
						<div class="span2">
							&nbsp;
						</div>
					</div>
				</span>
			   </div>
			   
			   <div class="mb10">
			   	<span class="mr20">
			   		<button class="btn btn-primary">搜索</button>
			   	</span>
			   </div>
		        
		        
		      
		    </div>
		  </form>
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th width="50">ID</th>
					<th>小孩真名（昵称）</th>
					<th>{:L('ICON')}</th>
					<th>生日</th>
					<th>性别</th>
					<th>学校名字</th>
					<th>年级</th>
					<th>是否会员</th>
					<th>操作</th>
				</tr>
			</thead>
			<tbody>
				<foreach name="list" item="v">
					<tr>
						<td>{$v.id}</td>
						<td>{$v.name}（{$v.nickname}）</td>
						<td><if condition="!empty($v[avatar])"><img style="width:50px;height:50px;" src="__ROOT__/data/upload/avatar/{$v.avatar}"/></if></td>
						<td>{$v.birthday}</td>
						<td><?php switch($v['gender']){
						case '0':
							echo "未知";
							break;
						case '1':
							echo "男";
							break;
						case '2':
							echo "女";
							break;
						} ?></td>
						<td>{$v.school}</td>
						<td>{$v.grade}</td>
						<td><?php if($v['is_vip']==0){ echo "否";} if($v['is_vip']){ echo "是";} ?></td>
						<td><a href="{:U('classification/editchild',array('editid'=>$v[id]))}">{:L('EDIT')}</a></td>
					</tr>
				</foreach>
			</tbody>
		</table>
		<div class="pagination">{$page}</div>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
</body>
</html>