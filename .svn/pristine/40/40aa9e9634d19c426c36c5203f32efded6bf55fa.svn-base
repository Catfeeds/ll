<!doctype html>
<html class="no-js">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="">
    <meta name="keywords" content="">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>注册</title>
    <link rel="stylesheet" href="../Public/css/weixin/amazeui.min.css">
    <link rel="stylesheet" href="../Public/css/weixin/bdTel.css">
    <!--<link rel="stylesheet" href="assets/css/app.css">-->
</head>
<body>
<!--表单-->
<section>
    <form class="am-form am-form-horizontal">
        <div class="am-form-group">
            <div class="am-u-sm-13">
                <label id="te">手机号</label>
                <input type="number" id="doc-ipt-3" class="am-radius" style="text-align: center">
                <button class="btn1">发送验证码</button>
            </div>
        </div>

        <div class="am-form-group" style="margin-top: -16px;">
            <div class="am-u-sm-13">
                <label id="yz">验证码</label>
                <input type="password" id="doc-ipt-pwd-2" class="am-radius" placeholder="输入验证码">
            </div>
        </div>

        <div class="am-form-group" style="margin-top: -16px;">
            <div class="am-u-sm-13">
                <label>输入密码</label>
                <input type="password" class="am-radius" placeholder="请输入至少6位字母或数字">
            </div>
        </div>

        <div class="am-form-group">
            <div class="am-u-sm-13">
                <label id="tj">推荐人</label>
                <input type="text" id="doc-ipt-pwd-3" class="am-radius" placeholder="请填写推荐人手机号码（选填）">
            </div>
        </div>

        <div class="am-form-group">
            <div class="am-u-sm-13">
                <p style="color: #a5a8a0;font-size: 12px;letter-spacing: 1.5px">注册即表明您同意<a style="color: #0190ff;border-bottom: 1px solid #0190ff;">用户协定</a></p>
            </div>
        </div>

        <div class="am-form-group">
            <div class="am-u-sm-13">
                <button type="submit" class="am-btn am-btn-block" style="background: #2adcaa;color: white;height: 50px;margin-top: -27px;border-radius:3px">注册</button>
            </div>
        </div>

    </form>
</section>
<!--[if (gte IE 9)|!(IE)]><!-->
<script src="../Public/js/weixin/jquery.min.js"></script>
<!--<![endif]-->
