<admintpl file="header" />
</head>
<body>
	<div class="wrap js-check-wrap">
		<ul class="nav nav-tabs">
			<li class="active"><a href="{:U('classification/teacherlist')}">{:L('ADMIN_TEACHER_INDEX')}</a></li>
			<li><a href="{:U('classification/addteacher')}">{:L('ADMIN_TEACHER_ADD')}</a></li>
		</ul>
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th width="50">ID</th>
					<th>{:L('NAME')}</th>
					<th>{:L('ICON')}</th>
					<th>{:L('COLLEGE')}</th>
					<th>{:L('GRADE')}</th>
					<th>{:L('CTIME')}</th>
					<th width="120">{:L('ACTIONS')}</th>
				</tr>
			</thead>
			<tbody>
				<foreach name="list" item="list">
					<tr>
						<td>{$list.id}</td>
						<td>{$list.name}</td>
						<td><if condition="!empty($list[avatar])"><img style="width:50px;height:50px;" src="__ROOT__/data/upload/avatar/{$list.avatar}"/></if></td>
						<td>{$list.university}</td>
						<td>{$list.teaching_grade}</td>
						<td>{$list.createtime}</td>
						<td><a href="{:U('classification/editeacher',array('editid'=>$list[id]))}">{:L('EDIT')}</a>|<a href="{:U('classification/delete',array('id'=>$list[id]))}" class="js_delete_ajax">{:L('DELETE')}</a></td>
					</tr>
				</foreach>
			</tbody>
		</table>
		<div class="pagination">{$page}</div>
	</div>
	<script src="__PUBLIC__/js/common.js"></script>
</body>
</html>